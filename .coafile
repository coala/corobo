[all]
files = *.py, plugins/**.py, answers/*.py
max_line_length = 80
use_spaces = True

[all.whitespace]
use_spaces = True
bears = SpaceConsistencyBear
default_actions = *: ApplyPatchAction

[all.python]
language = Python
bears = QuotesBear
preferred_quotation = '
default_actions = *: ApplyPatchAction

bears += KeywordBear
keywords = pdb

[all.autopep8]
bears = PEP8Bear, PycodestyleBear
default_actions = PEP8Bear: ApplyPatchAction

[all.linelength]
bears = LineLengthBear

[all.links]
bears = InvalidLinkBear

[commit]
bears = GitCommitBear
shortlog_regex = ([^:]*|[^:]+[^ ]: [A-Z0-9*].*)
shortlog_trailing_period = False
